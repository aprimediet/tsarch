{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@dto": ["src/dto"],
      "@dto/*": ["src/dto/*"],
      "@exceptions": ["src/exceptions"],
      "@exceptions/*": ["src/exceptions/*"],
      "@interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@libs": ["src/libs"],
      "@libs/*": ["src/libs/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@repos": ["src/repos"],
      "@repos/*": ["src/repos/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@templates": ["src/templates"],
      "@templates/*": ["src/templates/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  }
}