{
  "name": "ts-backend-architecture",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Aditya Prima <aditya.prima@automate-app.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:ts && npm run build:postCompile && npm run build:copy",
    "build:ts": "tsc",
    "build:copy": "cpy 'src/**/*.json' dist",
    "build:postCompile": "ef-tspm",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node .",
    "start:dev": "nodemon .",
    "start:prod": "echo 'we need to setup pm2 here'",
    "lint": "eslint . --quiet --fix",
    "test": "jest --forceExit --verbose true --silent true",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "injection-js": "^2.4.0",
    "mongoose": "^5.11.4",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  }
}
